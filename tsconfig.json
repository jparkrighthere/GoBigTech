{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2015", "dom", "dom.iterable"],
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
